{

  "processing_directory": "/path/to/output/directory",
  "mdoc_directory": "/path/to/directory/with/mdocs_and_frames",
  "modify_subframe_path": "YES",

  "file_sorting": "YES",
  "motion_correction": "YES",
  "ctf_estimation": "YES",
  "aretomo_alignment": "YES",
  "relion_tomo_import": "YES",
